<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (40/255, 40/255, 40/255, 1)

<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: "0"
            font_size: self.height/2
            halign: "right"
            size_hint: (1, 0.19)
            background_color: (40/255, 40/255, 40/255, 1)
            foreground_color: (1, 1, 1, 1)
            readonly: True

        GridLayout:
            cols: 4
            rows: 5
            spacing: 3

            #### row 1 ####

            Button:
                text: "C"
                font_size: self.height/2
                on_press: root.clear()
                background_color: (100/255, 1/255, 1/255, 1)


            Button:
                text: "DEL"
                font_size: self.height/2.2
                on_press: root.remove_last()
                background_color: (100/255, 1/255, 1/255, 1)

            Button:
                text: "%"
                font_size: self.height/2
                on_press: root.signs("%")
                background_color: (14/255, 73/255, 176/255, 1)
                

            Button:
                text: "+/-"
                font_size: self.height/2
                on_press: root.positive_negative()
                background_color: (14/255, 73/255, 176/255, 1)

            #### row 2 ####

            Button:
                text: "7"
                font_size: self.height/2
                on_press: root.button_value(7)

            Button:
                text: "8"
                font_size: self.height/2
                on_press: root.button_value(8)

            Button:
                text: "9"
                font_size: self.height/2
                on_press: root.button_value(9)

            Button:
                text: "/"
                font_size: self.height/2
                on_press: root.signs("/")
                background_color: (14/255, 73/255, 176/255, 1)

            #### row 3 ####

            Button:
                text: "4"
                font_size: self.height/2
                on_press: root.button_value(4)

            Button:
                text: "5"
                font_size: self.height/2
                on_press: root.button_value(5)

            Button:
                text: "6"
                font_size: self.height/2
                on_press: root.button_value(6)

            Button:
                text: "x"
                font_size: self.height/2
                on_press: root.signs("*")
                background_color: (14/255, 73/255, 176/255, 1)

            #### row 4 ####

            Button:
                text: "1"
                font_size: self.height/2
                on_press: root.button_value(1)

            Button:
                text: "2"
                font_size: self.height/2
                on_press: root.button_value(2)

            Button:
                text: "3"
                font_size: self.height/2
                on_press: root.button_value(3)

            Button:
                text: "-"
                font_size: self.height/2
                on_press: root.signs("-")
                background_color: (14/255, 73/255, 176/255, 1)

            #### row 5 ####

            Button:
                text: "."
                on_press: root.dot()
                font_size: self.height/2

            Button:
                text: "0"
                font_size: self.height/2
                on_press: root.button_value(0)

            Button:
                text: "="
                font_size: self.height/2
                on_press: root.results()
                background_color: (37/255, 117/255, 34/255, 1)

            Button:
                text: "+"
                font_size: self.height/2
                on_press: root.signs("+")
                background_color: (14/255, 73/255, 176/255, 1)
                
